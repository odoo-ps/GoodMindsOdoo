<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="author_tree" model="ir.ui.view">
        <field name="name">royalties.author.tree</field>
        <field name="model">royalties.author</field>
        <field name="arch" type="xml">
            <tree string="Authors">
                <field name="author"/>
                <field name="book"/>
                <field name="totalOwed"/>
                <field name="totalPaid"/>
            </tree>
        </field>
    </record>

    <!-- Displayed in the Create new screen -->
    <record id="author_form" model="ir.ui.view">
        <field name="name">royalties.author.form</field>
        <field name="model">royalties.author</field>
        <field name="arch" type="xml">
            <form string="Authors">
                <sheet>
                    <group>
                        <group>
                            <field name="author"/>
                            <field name="book"/>
                            <field name="track"/>
                        </group>
                        <group>
                            <field name="totalOwed"/>
                            <field name="totalPaid"/>
                        </group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action for author menu -->
    <record id="author_action" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">royalties.author</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Here's the help field for author.
            </p>
        </field>
    </record>

    <menuitem id="royalties_root" name="Royalties" sequence="1" web_icon="royalties,static/description/ico_Goku.png"/>
    <!-- <menuitem id="royalties_author_root" name="Authors" sequence="10"/> -->
    <menuitem id="royalties_root_author" name="Author" parent="royalties_root" sequence="10"/>
    <menuitem id="royalties_root_author_add" name="Add" parent="royalties_root_author" action="author_action" sequence="10"/>
</odoo>